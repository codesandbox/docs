{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    // {
    //   "name": "check npmrc",
    //   "command": "node --version && npm --version && pnpm --version && cat ~/.npmrc"
    // },
    // {
    //   "name": "temp npmrc",
    //   "command": "echo 'auto-install-peers=true' >> ~/.npmrc"
    // },
    {
      "name": "update pnpm",
      "command": "npm install -g pnpm --force"
    },
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
    // {
    //   "name": "Build theme",
    //   "command": "pnpm build:theme"
    // }
  ],
  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "dev:theme": {
      "name": "Watch theme",
      "command": "pnpm dev:theme"
    },
    "build:theme": {
      "name": "Build theme",
      "command": "pnpm build:theme",
      "runAtStart": true
    },
    "separator": {
      "name": "----",
      "command": "----",
      "runAtStart": false
    },
    "dev:sandbox": {
      "name": "Dev Sandbox",
      "command": "pnpm dev:sandbox",
      "runAtStart": true,
      "preview": {
        "port": 3001,
        "pr-link": "direct"
      }
    },
    "dev:projects": {
      "name": "Dev Projects",
      "command": "pnpm dev:projects",
      "runAtStart": true,
      "preview": {
        "port": 3000,
        "pr-link": "direct"
      }
    },
    "dev:vscode": {
      "name": "Dev VS code",
      "command": "pnpm dev:vscode",
      "runAtStart": false
    },
    "dev:ios": {
      "name": "Dev iOS",
      "command": "pnpm dev:ios",
      "runAtStart": false
    },
    "separator2": {
      "name": "----",
      "command": "----"
    },
    "test:sandbox": {
      "name": "Lint Text Sandbox",
      "command": "pnpm test:sandbox"
    },
    "test:projects": {
      "name": "Lint Text Project",
      "command": "pnpm test:projects"
    },
    "test:vscode": {
      "name": "Lint Text VS Code",
      "command": "pnpm test:vscode"
    },
    "test:ios": {
      "name": "Lint Text iOS",
      "command": "pnpm test:ios"
    }
  }
}
